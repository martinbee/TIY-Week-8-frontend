    <div class="row">
      <div class="page-header col-xs-8 col-xs-offset-2">
        <h1>Sign In!</h1>
      </div>
    </div>
    <div class="row">
      <%= simple_form_for :session, url: :auth, remote: true  do |f| %>
        <div class= "col-xs-8 col-xs-offset-2">
          <%= f.input :email, label:false, placeholder: "Email"%>
          <%= f.input :password, label:false, placeholder:"Password" %>
          <%= f.submit "Sign In", class: "modal-btn btn btn-primary" %>
        </div>
      <% end %>
      <div class= "col-xs-8 col-xs-offset-2">
      <%= link_to "Sign Up", :new_user, remote:true, class: "modal-btn btn btn-primary" %>
    </div>
